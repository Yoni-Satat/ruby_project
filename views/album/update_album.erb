<div class="form">
  <form action="/album/<%= @albums.id %>" method="post">
    <div class="field">
      <div class="label"><label for="title">Title: </label></div>
      <div class="input"><input type="text" name="title" id="title" value="<%= @albums.title %>"/></div>
    </div>

    <div class="field">
      <div class="label"><label for="quantity">Quantity: </label></div>
      <div class="input"><input type="text" name="quantity" id="quantity" value="<%= @albums.quantity %>"/></div>
    </div>

    <div class="field">
      <div class="label"><label for="buy_price">Buy Price: </label></div>
      <div class="input"><input type="text" name="buy_price" id="buy_price" value="<%= @albums.buy_price %>"/></div>
    </div>

    <div class="field">
      <div class="label"><label for="sell_price">Sell Price: </label></div>
      <div class="input"><input type="text" name="sell_price" id="sell_price" value="<%= @albums.sell_price %>"/></div>
    </div>

    <div class="field">
      <div class="label"><label for="artist-id">Select an Artist: </label></div>
      <div class="input"><select name="artist_id" id="artist-id">
        <% for artist in @artists %>
        <option value="<%= artist.id %>"><%=artist.name%></option>
        <% end %>
      </select></div>
    </div>

    <div class="field">
      <div class="label"><label for="genre-id">Select Genre: </label></div>
      <div class="input"><select name="genre_id" id="genre-id">
        <% for genre in @genres %>
        <option value="<%= genre.id %>"><%=genre.type%></option>
        <% end %>
      </select></div>
    </div>

    <div class="btn-icon">
      <label for="update-album">Update Album</label>
      <input type="image" src="/images/rotate.png" id="update-album" />
    </div>

  </form>
</div>
