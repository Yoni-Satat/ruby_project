<form action="/album" method="post">
  <div class="field">
    <label for="title">Title: </label>
    <input type="text" name="title" id="title"/>
  </div>

  <div class="field">
    <label for="quantity">Quantity: </label>
    <input type="text" name="quantity" id="quantity"/>
  </div>

  <div class="field">
    <label for="artist-id">Select an Artist: </label>
    <select name="artist_id" id="artist-id">
      <% for artist in @artists %>
      <option value="<%= artist.id %>"><%=artist.name%></option>
      <% end %>
    </select>
  </div>

  <div class="field">
    <label for="genre-id">Select an Genre: </label>
    <select name="genre_id" id="genre-id">
      <% for genre in @genres %>
      <option value="<%= genre.id %>"><%=genre.type%></option>
      <% end %>
    </select>
  </div>

  <div class="field">
    <label for="sell_price">Sell Price: </label>
    <input type="text" name="sell_price" id="sell_price"/>
  </div>

  <div class="field">
    <label for="buy_price">Buy Price: </label>
    <input type="text" name="buy_price" id="buy_price"/>
  </div>


  <button type="submit">Create New Album</button>
</form>
